<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/naviBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="驾车导航" />

        <Button
            android:id="@+id/truckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="货车导航" />

        <Button
            android:id="@+id/motorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="摩托车导航" />

        <Button
            android:id="@+id/drivingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="路线结果页" />

        <Button
            android:id="@+id/analogBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模拟导航" />

        <Button
            android:id="@+id/overlayBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图层绘制" />

        <Button
            android:id="@+id/externalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="传入外部GPS数据" />

        <Button
            android:id="@+id/cruiserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电子狗" />
        <Button
            android:id="@+id/gotoSettingsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="导航设置" />
        <Button
            android:id="@+id/selectNodeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="算路节点设置" />
    </LinearLayout>
</ScrollView>